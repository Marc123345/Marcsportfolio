{
  "name": "marc-friedman-portfolio",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build && node generate-sitemap.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "spellcheck": "eslint . --ext ts,tsx,js,jsx --rule 'spellcheck/spell-checker: 1'",
    "sitemap": "node generate-sitemap.mjs",
    "check:indexing": "node scripts/check-indexing-issues.js",
    "seo:check": "node scripts/check-indexing-issues.js && npm run sitemap",
    "cloudflare:get": "node scripts/cloudflare-transformations.js get",
    "cloudflare:enable-all": "node scripts/cloudflare-transformations.js enable-all"
  },
  "dependencies": {
    "@plausible-analytics/tracker": "^0.4.4",
    "@supabase/supabase-js": "^2.93.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.90.20",
    "framer-motion": "^11.18.2",
    "gsap": "^3.14.2",
    "lucide-react": "^0.563.0",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.1.2",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.30.3",
    "sitemap": "^7.1.2",
    "sonner": "^2.0.7",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "globals": "^17.3.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.51",
    "tailwindcss": "^3.4.19",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^3.2.4"
  }
}
